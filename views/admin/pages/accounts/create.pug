extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
    h1(class="mb-4") Thêm mới tài khoản

    +alert-error(5000)

    form(
        action=`${prefixAdmin}/accounts/create`
        method="POST"
        enctype="multipart/form-data"
    )

        div(class="form-group")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
            )
        
        div(class="form-group")
            label(for="email") Email *
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
            )

        div(class="form-group")
            label(for="password") Mật khẩu *
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
            )
        
        div(class="form-group")
            label(for="phone") Số điện thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
            )
        

        div(class="form-group")
            label(for="avatar") Avatar
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src=""
                class="image-preview"
                upload-image-preview
            )

        div(class="form-group")
            label(for="role_id") Phân quyền
            select(name="role_id" id="role_id" class="form-control")
                option(disabled selected) --Chọn--
                each item in roles
                    option(value=item._id) #{item.title}       
        div(class="form-group")
            label Trạng thái
            br
            div(class="form-check form-check-inline")
                input(
                    class="form-check-input"
                    type="radio"
                    name="status"
                    id="statusActive"
                    value="active"
                    checked
                )
                label(class="form-check-label" for="statusActive") Hoạt động
            
            div(class="form-check form-check-inline")
                input(
                    class="form-check-input"
                    type="radio"
                    name="status"
                    id="statusInactive"
                    value="inactive"
                )
                label(class="form-check-label" for="statusInactive") Dừng hoạt động

            div(class="form-group mt-4")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Tạo mới