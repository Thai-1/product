extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main  
    +alert-error(5000)

    .container.my-3
        .row.justify-content-center
            .col-8 
                h1(class="text-center") Đổi mật khẩu
                form(method="POST", action="/user/password/reset")
                    div(class="form-group")
                        label(for="password") Mật khẩu mới
                        input(
                            type="password",
                            class="form-control",
                            id="password",
                            name="password",
                            required
                        )
                    div(class="form-group")
                        label(for="confirmPassword") Xác nhận mật khẩu
                        input(
                            type="password",
                            class="form-control",
                            id="confirmPassword",
                            name="confirmPassword",
                            required
                        )
                    .form-group.mt-3
                        button(
                            type="submit",
                            class="btn btn-primary btn-block"
                        ) Đổi mật khẩu
